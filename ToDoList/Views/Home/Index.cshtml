@model ToDoListModel

@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/Caculator.css" rel="stylesheet" />
<script src="~/js/Caculator.js"></script>

<div class="caculator">
    <div class="display">
        <div class="index"></div>
        <div class="result">7</div>
    </div>
    <div class="buttonGroup">
        @for (int i = 0; i < 9; i++)
        {
             int temp = i + 1; <text> <div class="button"  onclick="addToIndex(@temp)">   <div class="buttonText" >@temp </div>  </div> </text>
        }
        <div class="button" onclick="addToIndex('.')">  <div class="buttonText">. </div> </div>
        <div class="button" onclick="addToIndex('0')">  <div class="buttonText">0 </div> </div>
        <div class="button" onclick="caculate()">  <div class="buttonText">= </div> </div>
    </div>
    <div class="caculatorGroup">
        <div class="button" onclick="addToIndex('+')">  <div class="buttonText">+ </div> </div>
        <div class="button" onclick="addToIndex('-')">  <div class="buttonText">- </div> </div>
        <div class="button" onclick="addToIndex('*')">  <div class="buttonText">* </div> </div>
        <div class="button" onclick="addToIndex('/')">  <div class="buttonText">/ </div> </div>

    </div>
</div>
